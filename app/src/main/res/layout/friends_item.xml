<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvTel"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgFriend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp" />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tvFriendsFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:text="TextView"
                android:textSize="12sp"
                android:drawablePadding="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgFriend"
                android:layout_toEndOf="@+id/imgFriend"
                android:layout_marginLeft="10dp" />
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tvFriendsLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:text="TextView"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:drawablePadding="10dp"
                android:layout_toRightOf="@+id/tvFriendsFirstName"
                android:layout_toEndOf="@+id/tvFriendsFirstName" />
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tvFriendsOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:text="TextView"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:drawablePadding="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
